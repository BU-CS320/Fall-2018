name:                 hw
version:              0.1.0.0
synopsis:
homepage:
author:               Mark
maintainer:           lemay@bu.edu
category:
build-type:           Simple
cabal-version:        >=1.10


library
  exposed-modules:    WarmUp, IndexTree, IndexTreeBad, HigherOrderProblems, AnnoyingLists, IndexAndConcordance, TypeclassProblems
