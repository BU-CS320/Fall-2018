    tests
  main-is: Main.hs
  other-modules: HigherOrderProblemsTest, IndexTreeBadTest, IndexTreeTest, WarmUpTest
  build-depends:
      base >= 4.7 && < 5
    , tasty >= 0.7, tasty-hunit
    , hw
